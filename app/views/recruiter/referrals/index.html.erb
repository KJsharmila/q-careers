<div class="row">
	<div class="col-sm-9">
		<%= render :partial=>"common/event/banner", locals: {event: @event, show_apply_button: false} %>
	</div>
	<div class="col-sm-3" style="padding-left:0">
		<div class="panel panel-default p-10 text-color-gray" style="height:220px;text-align:center;">
			<div id="div_registrations_count" class="text-color-green" style="font-size:100px;"><%= @event.referrals.count  %></div>
			<div style="font-size:28px;">Referrals</div>
		</div>
	</div>
</div>

<%= render :partial => "common/nav_tab/events", locals:{ er_class: "active" } %>

<div class="row mb-10">
	<div class="col-sm-6">
		<a onclick="$('#div_registration_filters').toggle()" class="btn btn-primary pull-left">Filter Results</a>
	</div>
	<div class="col-sm-6">
		<%= theme_search_form(CareerInterest, main_app.recruiter_event_referrals_path(@event), :get, true, "Search!", "Search Referrals") %>
  </div>
</div>

<div class="row mb-10">
	<div id="div_referral_filters" class="col-sm-12" style="display:none;">
		<%= render :partial => "filters" %>
  </div>
</div>

<%# Renders a partial to display all the events %>
<div class="row">
	<div id="div_referral_index" class="col-sm-6 hidden-xs">
		<%= render :partial=>"index" %>
	</div>

	<div id="div_referral_drop_down" class="col-xs-12 visible-xs">
		<%#= theme_drop_down(@referrals, :name, scope: :employee) %>
	</div>

	<div id="div_referral_details" class="col-xs-12 col-sm-6">
		<%= theme_detail_box(@referrals) %>
	</div>

</div>


