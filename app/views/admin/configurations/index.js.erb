<% if @configurations.any? %>
	// Fill the right box with first configuration details in thconfiguratione list
	$('#div_configuration_details').html("<%= escape_javascript(render(:partial=>'show')) %>");

	// Rendering the item list
	$('#div_configuration_index').html("<%= escape_javascript(render(:partial=>"index")) %>");
<% else %>
	var noResultsText = "<%= escape_javascript(theme_panel_message(I18n.translate('forms.no_results')))%>";
	$('#div_configuration_index').html(noResultsText);
	$('#div_configuration_details').html(noResultsText);
<% end %>