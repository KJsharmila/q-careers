<%= form_for([main_app, :admin, @career_configuration], :html => {:id=>"form_career_configuration", :class=>"mb-0 form-horizontal", :role => "form", :method => (@career_configuration.new_record? ? :post : :put), :remote=>true}) do |f| %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <%= params[:action].titleize %> Q-Career Configuration
    </div>
    <div class="panel-body" style="height:auto;">

      <div id="event_form_error">
        <%= @career_configuration.errors[:base].to_sentence %>
      </div>

      <div class="form-inputs mb-30 mt-30">
        <%= theme_form_field(@career_configuration, :name) %>
        <%= theme_form_field(@career_configuration, :value) %>
      </div>

    </div>

    <div class="panel-footer clearfix">
      <div class="pull-right">
        <% show_url = @career_configuration.new_record? ? main_app.admin_career_configurations_path : main_app.admin_career_configuration_path(@career_configuration) %>
        <%= link_to "Cancel", show_url, class: "btn btn-default", remote: true %>
        <%= theme_form_button(@career_configuration) %>
<% end %>

