<% if @career_configuration.errors.blank? %>
	// Fill the right box with first event details
	$('#div_career_configuration_details').html("<%= escape_javascript(render(:partial=>'show')) %>");

	// Add the newly created item to the list
  $("#div_career_configuration_index").prepend("<div id=\"div_career_configuration_<%= @career_configuration.id %>\"><%= escape_javascript(render(:partial => 'item', :locals => { :career_configuration => @career_configuration })) %></div>")
  $(".panel-message").hide();
<% else %>
  $('#div_career_configuration_details').html("<%= escape_javascript(render(:partial=>'form')) %>");

  // Populate Server Side Errors
  <%
    text = "You have few errors. They have been highlighted."
    error_message = content_tag(:div, text, class: "alert alert-danger")
  %>
  $("#career_configuration_form_error").html("<%= escape_javascript(error_message) %>");
<% end %>
