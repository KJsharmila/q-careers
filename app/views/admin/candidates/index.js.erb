$('#div_candidate_details').hide();
<% if @candidates.any? %>
	// Rendering the item list
	$('#div_candidate_index').html("<%= escape_javascript(render(:partial=>"index")) %>");
<% else %>
	var noResultsText = "<%= escape_javascript(theme_panel_message(I18n.translate('forms.no_results')))%>";
	$('#div_candidate_index').html(noResultsText);
<% end %>