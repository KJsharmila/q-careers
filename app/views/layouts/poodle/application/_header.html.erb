<div class="header">

  <ul class="nav nav-pills pull-right">
    <% if @current_user %>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          <%= @current_user.name %>
          <%= " (#{@current_user.display_q_careers_role})" unless Rails.env == "production" %>
        <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <li class="dropdown-header">Profile</li>

          <li><%= link_to raw("<i class=\"fa fa-user\"></i> My Profile"), QAuthRubyClient.configuration.q_auth_url + QAuthRubyClient.configuration.my_profile_url, target: "_blank" %></li>


          <li class="divider"></li>
          <li class="dropdown-header">Q-Apps</li>
          <li><%= link_to raw("Q-Auth"), QAuthRubyClient.configuration.q_auth_url, target: "_blank" %></li>
          <li class="divider"></li>
          <li><%= link_to raw("Sign Out"), q_auth_ruby_client.sign_out_url, method: :delete %></li>
        </ul>
      </li>
    <% else %>
      <li>
        <%= link_to raw("Sign In"), q_auth_ruby_client.sign_in_url %>
      </li>
    <% end %>

  </ul>
  <div class="cl-10"></div>
  <div class="visible-xs" style="border:1px solid #c1c1c1;margin-bottom:20px"></div>
</div>

